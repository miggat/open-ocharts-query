{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build open-ocharts-query",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. && make -j$(nproc)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Builds open-ocharts-query using cmake and make"
        },
        {
            "label": "Clean and Build open-ocharts-query",
            "type": "shell",
            "command": "rm -rf build && mkdir build && cd build && cmake .. && make -j$(nproc)",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Cleans build folder and rebuilds open-ocharts-query"
        },
        {
            "label": "Run open-ocharts-query (debug)",
            "type": "shell",
            "command": "./build/open-ocharts-query",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Runs the open-ocharts-query server in debug mode"
        },
        {
            "label": "start-xvfb",
            "type": "shell",
            "command": "pgrep Xvfb || (Xvfb :99 -screen 0 512x512x24 & sleep 1)",
            "problemMatcher": []
        }
    ]
}